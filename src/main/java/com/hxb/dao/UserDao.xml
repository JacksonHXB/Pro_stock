<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
	  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hxb.dao.UserDao">
	<!-- 查询所有用户 -->
	<select id="queryUsers" resultType="com.hxb.entity.User">
		SELECT * FROM tb_user
	</select>
	
	<!-- 根据用户名查询用户 -->
	<select id="queryUserByName" resultType="com.hxb.entity.User" parameterType="java.lang.String">
		SELECT * FROM tb_user WHERE username=#{username} 
	</select>
</mapper>



















































