<!DOCTYPE mapper
	  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hxb.dao.KnowledgeDao">
	<!--  
	<resultMap type="com.hxb.entity.Knowledge" id="knowledgeMap">
		<id property="id" column="students_id"/>
		<result property="name" column="students_name"/>
		<result property="sal" column="students_sal"/>
	</resultMap>
	-->
	
	<!-- 查询所有用户 -->
	<select id="queryAllKnowledge" resultType="com.hxb.entity.Knowledge">
		SELECT * FROM tb_knowledge
		<if test="key != null">
			WHERE keyword LIKE CONCAT('%',#{key},'%')
		</if>
		<if test="sort!=null">
			ORDER BY #{sort} DESC
		</if>
		LIMIT #{page}, #{size}
	</select>
</mapper>



















































